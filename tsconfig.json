{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"esModuleInterop": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"noEmit": false,
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags (disabled by default)
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": false,

		// Setup the Paths
		"paths": {
			"@/*": ["./src/*"],
			"@auth/*": ["./src/packages/auth/*"]
		}
	},
	"include": ["./src/**/*"]
}
